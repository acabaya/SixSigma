citHeader("To cite package 'SixSigma' in publications use:")

     ## R >= 2.8.0 passes package metadata to citation().
     if(!exists("meta") || is.null(meta)) meta <- packageDescription("SixSigma")
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
     vers <- paste("R package version", meta$Version)

     citEntry(entry="Manual",
              title = "SixSigma: Six Sigma Tools for Quality Improvement",
              author = personList(as.person("Emilio Lopez"),
                                  as.person("Andres Redchuk"),
                                  as.person("Javier M.Moguerza"),
				  person("Rey Juan Carlos University (Madrid)")),
              year = year,
              note = vers,
              textVersion =
              paste("Emilio Lopez, Andres Redchuk, Javier M.Moguerza, (",
                    year,"). Rey Juan Carlos University. SixSigma: Six Sigma Tools for Quality and Process Improvement ", vers, ".", sep=""))